{{#if tasks}}
<div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-bordered table-hover table-dark table-striped ">
    <thead>
        <tr>
            <th>Orden</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Operacion</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td class="text-center">

                <a href="/tasks/{{_id}}/edit" class="btn btn-info btn-sm mt-1">Editar</a>
                <a href="/tasks/{{_id}}/delete" class="btn btn-danger btn-sm mt-1">Eliminar</a>
                
                {{#if done}}
                <a href="/tasks/{{_id}}/toggleDone"class="btn btn-success btn-sm mt-1">Hecho</a>
                {{else}}
                <a href="/tasks/{{_id}}/toggleDone"class="btn btn-warning btn-sm mt-1">Hacer</a>
                {{/if}}

            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
{{else}}

<div class="thumbnail text-center">
    <img src="/icons/note-papier3.svg" alt="" class="img-responsive w-50">
    <div class="caption">
        <p>SIN REGISTRO DE TAREAS</p>
    </div>
</div>

{{/if}}