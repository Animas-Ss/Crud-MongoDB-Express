<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card movimiento">
        <div class="card-header bg-dark p-4 text-white"><h4>ACTUALIZAR TAREA</h4></div>
        <div class="card-body bg-dark p-4 text-white">
          <form action="/tasks/{{task._id}}/edit" method="POST">

            <div class="mb-3">
              <label for="title">Escribe un Titulo:</label>
              <input
                type="text"
                name="title"
                placeholder="title"
                id="title"
                value="{{task.title}}"
                class="form-control rounde-0 bg-dark text-white"
              />
            </div>
            <div class="mb-3">
              <label for="description">Escribe una Descripcion:</label>
              <textarea
                name="description"
                rows="3"
                placeholder="Descripcion"
                id="description"
                class="form-control rounde-0 bg-dark text-white"
              >{{task.description}}</textarea>
            </div>
            <button class="btn btn-warning">Actualizar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>